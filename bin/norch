#!/usr/bin/env node

const norch = require('../src/main.js')
const { Command } = require('commander')

const program = new Command()

program
  .version(require('../package.json').version)
  .option(
    '-p, --port <port>',
    'specify the port, defaults to PORT or 3030',
    Number,
    3030
  )
  .option(
    '-d, --data <data>',
    'specify the name of the directory that stores the data, defaults to norch-data',
    String,
    'norch-data'
  )
  .parse(process.argv)

norch(program.opts())
